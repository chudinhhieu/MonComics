<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp">
    <TextView
        android:id="@+id/tv_dmk"
        android:layout_width="wrap_content"
        android:fontFamily="@font/worksans"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:textSize="24dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Đổi mật khẩu"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edL_mkc"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_below="@+id/tv_dmk"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/main"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:startIconTint="@color/main"
        android:fontFamily="@font/worksans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_mkc"
            android:hint="Mật khẩu cũ"
            android:inputType="textPassword"
            android:fontFamily="@font/worksans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edL_mkm"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/main"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:startIconTint="@color/main"
        android:layout_below="@+id/edL_mkc"
        android:fontFamily="@font/worksans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_mkm"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:fontFamily="@font/worksans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edL_lmkm"
        android:layout_marginBottom="10dp"
        style="@style/LoginTextInputLayoutStyle"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/main"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:startIconTint="@color/main"
        android:layout_below="@+id/edL_mkm"
        android:fontFamily="@font/worksans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_lmkm"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:fontFamily="@font/worksans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_xacNhan_dmk"
        android:text="Xác nhận"
        android:fontFamily="@font/worksans"
        android:textColor="@color/white"
        android:backgroundTint="@color/main"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edL_lmkm"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_huy_dmk"
        android:text="Hủy"
        android:textColor="@color/white"
        android:fontFamily="@font/worksans"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edL_lmkm"
        android:backgroundTint="@color/red"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>